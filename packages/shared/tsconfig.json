/**
 * TypeScript configuration file for shared packages.
 * This configuration enables the latest features and enforces strict
 * type-checking options for improved code quality.
 * Configured for CommonJS compatibility.
 */
{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES2023",
    "module": "CommonJS",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
