{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["API_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true 
  },
  "db:deploy": {
    "cache": false
  },
    "format": {
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md}"],
      "outputs": []
    },
    "format:check": {
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md}"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
